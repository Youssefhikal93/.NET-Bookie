@model IEnumerable<Product>


<div class="row pb-3">

    @foreach (Product product in Model)
    {

        <div class="col-lg-3 col-sm-6">
            <div class="row p-2">
                <div class="col-12 p-1">
                    <div class="card border-0 border-top border-5  p-3 shadow  rounded">
                        <img src="@product.ImageUrl" alt="@product.Title" class="card-img-top rounded" />
                        <div class="card-body pb-0">
                            <div class="pl-1">
                                <p class="card-title h5 text-dark opacity-75 text-uppercase text-center">@product.Title</p>
                                <p class="card-title h5 text-warning text-center">@product.Author</p>

                            </div>
                            <div class="pl-1 ">
                                <p class="text-dark text-opacity-75 text-uppercase text-center mb-0">

                                    <span class="text-decoration-line-through">@product.ListPrice.ToString("C")</span>
                                </p>

                            </div>
                        </div>
                        <div class="pl-1">
                            <p class="text-dark text-opacity-75 text-uppercase text-center">
                                As low as:
                                <span>@product.Price100.ToString("C")</span>
                            </p>


                        </div>

                        <div>
                            <a asp-area="Customer" asp-controller="Home" asp-action="Details" asp-route-id="@product.Id" class="btn btn-primary bg-gradient border-0 from-control w-100">Details</a>
                            
                        </div>
                    </div>
                </div>

            </div>
        </div>

    }

</div>