@model Product



<div class="card shadow border-0 mt-4">
    <div class="card-header bg-secondary bg-gradient ml-0 py-3">
        <div class="row">
            <div class="col-12 text-center">
                <h2 class="text-white py-2">Delete @Model.Title</h2>
            </div>
        </div>
    </div>
    <div class="card-body p-4">

        <form method="post">
            <input name="" hidden asp-for="Id" />
            <div asp-validation-summary="All"></div>

            <div class="mb-3">
                <label class="py-1">Book Name</label>
                <input asp-for="Title" class="form-control" disabled />
                <span asp-validation-for="Title" class="text-danger"></span>
            </div>
            <div class="mb-3">
                <label class="py-1">Author</label>
                <input asp-for="Author" class="form-control" disabled />
                <span asp-validation-for="Author" class="text-danger"></span>
            </div>
            <div class="mb-3">
                <label class="py-1">ISBN</label>
                <input asp-for="ISBN" class="form-control" disabled />
                <span asp-validation-for="ISBN" class="text-danger"></span>
            </div>
            <div class="mb-3">
                <label class="py-1">Description</label>
                <input asp-for="Description" class="form-control" disabled />
                <span asp-validation-for="Description" class="text-danger"></span>
            </div>
            <div class="mb-3">
                <label class="py-1">Price</label>
                <input asp-for="Price" class="form-control" disabled />
                <span asp-validation-for="Price" class="text-danger"></span>
            </div>
            <div class="mb-3">
                <label class="py-1">Pricelist</label>
                <input asp-for="ListPrice" class="form-control" disabled />
                <span asp-validation-for="ListPrice" class="text-danger"></span>
            </div>
            <div class="mb-3">
                <label class="py-1">Price 50+</label>
                <input asp-for="Price50" class="form-control" disabled />
                <span asp-validation-for="Price50" class="text-danger"></span>
            </div>
            <div class="mb-3">
                <label class="py-1">Price 100+</label>
                <input asp-for="Price100" class="form-control" disabled />
                <span asp-validation-for="Price100" class="text-danger"></span>
            </div>

            <div class="row">

                <div class="col-6 col-md-3">

                    <button class="btn btn-danger form-control" type="submit">Delete</button>
                </div>
                <div class="col-6 col-md-3">

                    <a asp-controller="Product" asp-action="Index" class="btn btn-outline-secondary form-control">Back to list</a>
                </div>
            </div>
        </form>
    </div>
</div>





