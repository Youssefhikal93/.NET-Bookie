@model List<Category>



<div class="card shadow border-0 my-4">
    <div class="card-header bg-secondary bg-gradient ml-0 py-3">
        <div class="row">
            <div class="col-12 text-center">
                <h2 class="text-white py-2">Category List</h2>
            </div>
        </div>
    </div>
    <div class="card-body p-4">

        <div class="container">
            <div class="row py-5">
                <div class="col-md-12 text-end">
                    <a asp-controller="Category" asp-action="Create" class="btn btn-primary p-2">
                        <i class="bi bi-plus-circle px-2"></i> <span class="mx-1"> Create new category </span>
                    </a>
                </div>
            </div>
        </div>

        <table class="table table-bordered table-striped">
            <tr>
                <th>
                    Display Order
                </th>
                <th>
                    Category Name
                </th>

                <th></th>
            </tr>
            <tbody>
                @foreach (var item in Model.OrderBy(u => u.DisplayOrder))
                {

                    <tr>
                        <td>@item.DisplayOrder</td>
                        <td>@item.Name</td>
                        <td>
                            <div class="w-100 btn-group gap-2" role="group">
                                <a asp-controller="Category" asp-action="Edit" asp-route-id="@item.Id" class="btn btn-primary mx-1"><i class="bi bi-pencil-square px-2"></i>Edit</a>
                                <a asp-controller="Category" asp-action="Delete" asp-route-id="@item.Id" class="btn btn-danger mx-1"><i class="bi bi-trash px-2"></i>Delete</a>

                            </div>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>




    